---

<Container id="estudios">
    <Section classes="flex-col">
        <h2 class="text-xl">Estudios</h2>
        <article class="flex flex-col w-11/12 items-center justify-center gap-2 my-4">
            {
                Titles.map((title) =>
                    (
                        <div class="w-full bg-brand-gray py-2 px-1 rounded-xl">
                            <h3 class="text-lg text-brand-white">{title.title}</h3>
                            <h4 class="text-md text-brand-white">{title.school}</h4>
                            <h5 class="text-md text-brand-white">{title.date}</h5>
                        </div>
                    )
                )
            }
        </article>
        <h2 class="text-xl">Habilidades Tecnicas</h2>
        <article class="flex flex-row flex-wrap w-2/4 items-center justify-center gap-2 my-4 self-center max-md:w-10/12">
            {
                TAGS.map(tag =>(
                    <div class={`flex flex-row items-center justify-center gap-2 rounded-xl p-2 ${tag.class}`}>
                        <tag.icon class="size-7 max-md:size-4"/>
                        <h3 class="text-lg max-md:text-sm">{tag.lang}</h3>
                    </div>
                ))
            }
    </Section>
</Container>