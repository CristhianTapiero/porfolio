        icon: "TypeScript",
    },
    {
        lang: "MySQL",
        icon: "MYSQL",
    },
    {
        lang: "Java",
        icon: "Java",
    },
    {
        lang: "AWS",
        icon: "Amazon",
    },
    {
        lang: "Git",
        icon: "Git",
    },
    {
