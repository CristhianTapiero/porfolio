---
import { Icon } from "astro-icon/components"

const social = [
    {
        name: 'Instagram',
        url: 'https://www.instagram.com/tapieropadilla/',
        icon: "instagram"
    },
    {
        name: 'X',
        url: 'https://twitter.com/tapiero_padilla',
        icon: "x"
    },{
        name: 'Linkedin',
        url: 'https://www.linkedin.com/in/cristhian-tapiero/',
        icon: "linkedin"
    }
]
---

<div class="relative flex items-center justify-evenly max-sm:justify-between h-16 w-full px-4 py-2 bg-personal-white text-personal-black border-t-personal-black border-2">
    <p class="text-base max-sm:text-xs">&copy; Hecho por Cristhian Tapiero</p>
    <div class="flex gap-x-2 justify-center items-center max-sm:text-xs">
        Sigueme en:
        {
            social.map(item => (
                    <a href={item.url} aria-label={`Ir a mi feed personal de ${item.name}`} class="flex cursor-pointer"><Icon name={`simple-icons:${item.icon}`} class='size-5 max-sm:size-4' /></a>
                )
            )
        }
    </div>
</div>